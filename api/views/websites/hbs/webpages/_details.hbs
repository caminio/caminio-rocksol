{{#if curSelectedItem}}

  <form>

    <div class="box-title">
      <span class="btn close" {{action cancelClose}}><i class="fa fa-times"></i></span>

      <div class="btn-group pull-right">
        <button {{bind-attr class=":save :btn :icon-text curSelectedItem.isDirty:primary:disabled"}}
                {{action saveWebpage curSelectedItem}}
                tabindex="1">
          <i class="fa fa-save"></i> {{t 'save'}}
        </button>
      </div>

      <strong>{{curSelectedItem.name}}</strong>
      {{t 'properties'}}

    </div>

    <div class="clearfix">

      <div class="caminio col-md-12">

        <div class="form-group">

          <label>{{t 'name'}} <span class="desc">&nbsp;{{t 'will_be_filename'}}</span></label>
          <div {{bind-attr class="nameError:field-with-error"}}>
            {{input valueBinding='curSelectedItem.name' class='form-control'}}
            {{#if nameError}}<span class="help-block">{{errors.name}}</span>{{/if}}
          </div>

        </div>

        <div class="form-group">

          <label>{{t 'webpage.status'}}</label>
          <br>

          <button {{action removeSelectedItem}} class="btn highlight-danger icon-text pull-right" tabindex="-1">
            <i class="fa fa-trash-o"></i>
            <span>{{t 'delete'}}</span>
          </button>

          <button class="pull-right btn icon-text" {{action editWebpage curSelectedItem}}>
            <i class="fa fa-align-left"></i> {{t 'edit_content'}}
          </button>


          <button {{action setState 'published'}} 
                  {{bind-attr class=":btn :pale isPublished:success"}}>{{t 'webpage.published'}}</button>
          <button {{action setState 'draft'}} 
                  {{bind-attr class=":btn :pale isDraft:primary"}}>{{t 'webpage.draft'}}</button>
          <button {{action setState 'review'}} 
                  {{bind-attr class=":btn :pale inReview:warning"}}>{{t 'webpage.review'}}</button>

        </div>

        {{#if inReview}}
          <fieldset class="with-border">
            <legend>{{t 'webpage.request_review'}}</legend>
            <div class="form-group">

              <label>{{t 'webpage.assign_to'}}</label>
              <div>
                {{input valueBinding='curSelectedItem.requestReviewBy.fullname' class='form-control'}}
              </div>
            </div>

            <div class="form-group">        
              <label>{{t 'webpage.review_message'}}</label>
              <div>
                {{textarea valueBinding='curSelectedItem.requestReviewMsg' class='form-control'}}
              </div>

            </div>
          </fieldset>
        {{/if}}

        <div class="form-group clearfix">

          <div class="pull-left">
            <label>{{t 'webpage.layout'}}</label>
            <br>


            {{view Ember.Select
                   content=availableLayouts
                   valueBinding='curSelectedItem.layout'
            }}
            
          </div>

          {{#if curTranslation.hasMultiLang}}
            <div class="pull-right align-right">
              <label>{{t 'translation.title'}}</label>
              <br>


              {{view Ember.Select
                     content=curTranslation.availableLangs
                     valueBinding='curLang'
              }}
              
            </div>
          {{/if}}

        </div>

        {{webpage-meta webpage=curSelectedItem translation=curTranslation curLang=curLang}}
        
        {{#if curSelectedItem.isActivityPage}}
          {{webpage-activities webpage=curSelectedItem}}
        {{/if}}

      </div>


    </div>
  </form>

{{else}}

  <div class="empty-exp">
    <i class="fa fa-info-circle large block"></i>
    {{#if noWebpage}}
      {{t webpage.no_webpage_yet}}
      <br>
      <a href="#" {{action promptNewWebpage}}>{{t 'webpage.create_new'}}</a>
    {{else}}
      {{t webpage.select_webpage_to_show_info}}
    {{/if}}
  </div>

{{/if}}