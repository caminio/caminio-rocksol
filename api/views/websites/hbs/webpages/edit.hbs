<section class="main-wrapper">

  <header>
    <div class="box title-box websites">
      <div class="main-ctrl">

        <button class="btn icon-text" {{action 'cancelEdit' this}}>
          <i class="fa fa-arrow-left"></i>
          {{t 'cancel'}}
        </button>

        <button class="btn primary icon-text" {{action 'saveTranslation'}}>
          <i class="fa fa-save"></i>
          {{t 'save'}}
        </button>

        <div class="btn-group">
          <button class="btn text-icon">
            {{t 'webpage.layout'}}:
            <strong>{{model.layout}}</strong>
            <i class="fa fa-angle-down"></i>
          </button> 
          <button class="btn text-icon">
            {{t 'translation.title'}}:
            <strong>{{translation.locale}}</strong>
            <i class="fa fa-angle-down"></i>
          </button>
        </div>
      </div>

      <h1>{{model.name}}</h1>

    </div>

  </header>

  <div class="features">

    <section class="editor">
      <div class="outer">
        <section class="entry-markdown">
          <header class="floatingheader">
            <div class="btn-toolbar">
              <div class="btn-group">
                <button class="btn">
                  <i class="fa fa-bold"></i>
                </button>
                <button class="btn">
                  <i class="fa fa-italic"></i>
                </button>
                <button class="btn">
                  <i class="fa fa-underline"></i>
                </button>
              </div>
              <div class="btn-group">
                <button class="btn">
                  <i class="fa fa-picture-o"></i>
                </button>
                <button class="btn">
                  <i class="fa fa-chain"></i>
                </button>
              </div>
            </div>
          </header>
          
          <section class="entry-markdown-content">
            <textarea class="input-area" id="editor-input-content"></textarea>
          </section>
        </section>
        <section class="entry-preview active">
          <header class="floatingheader">
            {{t 'preview'}}<span class="entry-word-count">0 {{t 'words'}}</span>
          </header>
          <section class="entry-preview-content">
            <div class="rendered-markdown"></div>
          </section>
        </section>
      </div>
    </section>

</div>


</section>