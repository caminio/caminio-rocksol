<section class="main-wrapper">
  <header>
    <div class="box">
      <div class="main-ctrl">
        <button class="btn success icon-text" {{action 'promptNewWebpage'}}>
          <i class="fa fa-plus-square"></i>
          {{t webpage.new}}
        </button>
      </div>
      <h1>{{domain.name}}</h1>
      <h2 class="no-margin-bottom">{{t website.subtitle}}</h2>

      <ul class="sub-navbar nav nav-pills">
        <li class="active">
          {{#link-to 'webpages.index'}}{{t 'webpages.title'}}{{/link-to}}
        </li>
        <li>
          {{#link-to 'webpages.index'}}{{t 'blogs.title'}}{{/link-to}}
        </li>
      </ul>

    </div>

  </header>

  <div class="row span-row">

    <div class="col-md-6">
      <div class="box default-padding">
        {{partial 'webpages/tree'}}
      </div>
    </div>

    <div class="col-md-6">
      <div class="box default-padding">
        {{partial 'webpages/details'}}
      </div>
    </div>

  </div>

</section>