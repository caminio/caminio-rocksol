
<div id='pebbles-library' class='modal fade'>
  <div class="modal-dialog" style="width: 80%">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">{{t 'pebbles.title'}}</h4>
      </div>
      <div class="modal-body clearfix">

        <div class="media-manager">

          <div class="col-md-12">

            <div class="row">
              
              <div class="col-md-6">

                <div class="box">
                  <div class="box-title">
                    <div class="btn-toolbox">

                      <div class="btn-group">
                        <button class="btn">
                          <i class="fa fa-square-o" {{translateAttr title='select_all'}}></i>
                        </button>
                      </div>

                      <div class="btn-group">
                        <button class="btn">
                          <i class="fa fa-trash-o" {{translateAttr title='delete_selected'}}></i>
                        </button>
                      </div>

                      <div class="btn-group">
                        <button class="btn">
                          <i class="fa fa-cut" {{translateAttr title='cut'}}></i>
                        </button>
                        <button class="btn">
                          <i class="fa fa-copy" {{translateAttr title='copy'}}></i>
                        </button>
                        <button class="btn">
                          <i class="fa fa-paste" {{translateAttr title='paste'}}></i>
                        </button>
                      </div>

                    </div>
                  </div>

                  <div class="row default-padding">
                  
                    <h1>pebbles</h1>

                  </div>

                </div>
              </div>

              <div class="col-md-6">

                <h1>settings</h1>

              </div>

            </div>
          </div>

        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">{{t 'close'}}</button>
        <button type="button" {{bind-attr class=":btn curFile:primary"}} {{action insertPebble}}>{{t 'media.insert_selected'}}</button>
      </div>
    </div>
  </div><!-- /.modal-dialog -->
</div>