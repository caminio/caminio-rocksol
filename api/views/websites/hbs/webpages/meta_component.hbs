<div class="activities-tab settings-tab">

  <h4 class="mini-title">
    <a href="#" class="toggle-container"
      {{action 'toggleContainer' 'showMeta'}}>
      <i {{bind-attr class=":toggle-container :fa showMeta:fa-angle-down:fa-angle-right"}}></i>
      {{t 'meta.title'}}
    </a>
  </h4>

  <div {{bind-attr class="showMeta::hide"}}>

    <div class="form-group">

      <label for="example-text-input">{{t 'meta.description'}} <span class="desc">&nbsp;{{t 'meta.description_desc'}}</span></label>
      <div {{bind-attr class="nameError:field-with-error"}}>
        {{textarea valueBinding='translation.metaDescription' class='form-control'}}
      </div>

    </div>
    
    <div class="form-group">

      <label for="example-text-input">
        {{t 'meta.keywords'}}
        <span class="desc">&nbsp;{{t 'meta.keywords_desc'}}</span>
      </label>
      <div {{bind-attr class="nameError:field-with-error"}}>
        {{input valueBinding='translation.metaKeywords' class='form-control' id="meta-keys"}}
      </div>

    </div>

  </div>

</div>