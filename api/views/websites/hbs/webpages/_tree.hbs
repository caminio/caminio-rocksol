<div class="box-title">{{t 'webpages.list'}}</div>

<div class="default-padding">

  <ol class="caminio-tree webpages-tree">
    {{#each rootWebpages}}
      <li>
        <div class="item-container"
          {{bind-attr data-id='id'}}
          {{action 'webpageDetails' this}}>
          <span {{bind-attr class=":status-indicator :btn isPublished:success isDraft:primary inReview:warning"}}></span>
          <i class="fa fa-file-text webpage-icon"></i>
          <span class="move">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </span>
          <span class="title" {{bind-attr title='name'}}>{{name}}</span>
          <span class="locales desc">
            {{usedLocales}}
          </span>
        </div>
      </li>
    {{/each}}

  </ol>
  
</div>